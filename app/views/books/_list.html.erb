<div class="col-xs-3">
	<h2>User Info</h2>
	<%= attachment_image_tag user, :user_image, :fill,60,60, format:'jpeg',fallback: "no_image.jpg",size:"60x60"%><br><hr>
	<p>名前:<%= user.name %></p><hr>
	<p>自己紹介:<%= user.user_caption %></p><hr>
	<% if user.id == current_user.id%>
		<%= link_to "", edit_user_path(user),class:"btn btn-default btn-block glyphicon glyphicon-cog edit_user_#{user.id}"%>
	<% end %>
	<h2>新規投稿</h2>
	<%= form_for(book) do |f| %>
		<div class="field">
			<%= f.label :タイトル %><br>
			<%= f.text_field :title, class:"col-xs-12 book_title" %>
		</div>
		<div class="field">
			<%= f.label :本文 %><br>
			<%= f.text_area :book_caption, class:"col-xs-12 book_body"%><br>
		</div>
		<%= f.submit "作成", class:"btn btn-primary col-xs-12"%>
	<% end %>
</div>