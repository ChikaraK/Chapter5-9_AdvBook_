<div class="container">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true, placeholder: "名前",class:"name" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード",class:"password"%>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "ログイン",class:"btn btn-primary"%>
    </div>
  <% end %>
</div>