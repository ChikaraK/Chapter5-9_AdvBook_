<div class="container">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  <h2>プロフィール変更</h2>

  <%= form_for @user, url: user_path(@user.id),method: :patch do |f| %>

    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true, placeholder: "名前",class:"name"%>
    </div>

    <div class="field">
      <%= f.label :プロフィール画像 %><br />
      <%= f.attachment_field :user_image,class:"user_image"%>
    </div>

    <div class="field">
      <%= f.label :自己紹介文_50文字まで%><br />
      <%= f.text_area :user_caption, class:"introduction"%>
    </div>

    <div class="actions">
      <%= f.submit "更新" %>
    </div>
  <% end %>
</div>