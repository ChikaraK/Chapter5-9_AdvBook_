<div class="container">
	<div class="row">
		<%=render 'books/list', user: current_user,book: @book %>
		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user|%>
						<tr>
							<td><%= attachment_image_tag user, :user_image, :fill,30,30, format:'jpeg',fallback: "no_image.jpg",size: "30x30"%><br></td>
							<td><%= user.name %></td>
							<td><%= link_to 'show', user_path(user.id),class:"user_#{user.id}"%></td>
						</tr>
				</tbody>
				<%end%>
			</table>
		</div>
	</div>
</div>